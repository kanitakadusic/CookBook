<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Filter "
                    android:fontFamily="@font/poppins_light"
                    android:includeFontPadding="false"
                    android:textSize="28sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Results"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:textSize="28sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="80dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/meal_container">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/exImage1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/meal_image"
                            app:shapeAppearanceOverlay="@style/rounded_image"
                            android:elevation="3dp"/>

                        <TextView
                            android:id="@+id/exText1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginHorizontal="12dp"
                            android:text="Vegan Lasagna"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:ellipsize="end"
                            android:singleLine="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/meal_container">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/exImage2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/meal_image"
                            app:shapeAppearanceOverlay="@style/rounded_image"
                            android:elevation="3dp"/>

                        <TextView
                            android:id="@+id/exText2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginHorizontal="12dp"
                            android:text="General Tso's Chicken"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:ellipsize="end"
                            android:singleLine="true"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/meal_container">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/exImage3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/meal_image"
                            app:shapeAppearanceOverlay="@style/rounded_image"
                            android:elevation="3dp"/>

                        <TextView
                            android:id="@+id/exText3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginHorizontal="12dp"
                            android:text="Vegan Lasagna"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:ellipsize="end"
                            android:singleLine="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/meal_container">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/exImage4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/meal_image"
                            app:shapeAppearanceOverlay="@style/rounded_image"
                            android:elevation="3dp"/>

                        <TextView
                            android:id="@+id/exText4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginHorizontal="12dp"
                            android:text="General Tso's Chicken"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:ellipsize="end"
                            android:singleLine="true"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/meal_container">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/exImage5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/meal_image"
                            app:shapeAppearanceOverlay="@style/rounded_image"
                            android:elevation="3dp"/>

                        <TextView
                            android:id="@+id/exText5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginHorizontal="12dp"
                            android:text="Vegan Lasagna"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:ellipsize="end"
                            android:singleLine="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/meal_container">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/exImage6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/meal_image"
                            app:shapeAppearanceOverlay="@style/rounded_image"
                            android:elevation="3dp"/>

                        <TextView
                            android:id="@+id/exText6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginHorizontal="12dp"
                            android:text="General Tso's Chicken"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:ellipsize="end"
                            android:singleLine="true"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation"
        android:background="?android:attr/windowBackground"/>
</RelativeLayout>