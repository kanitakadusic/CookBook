<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true" android:color="@color/orange">
        <shape android:shape="line">
            <stroke android:color="@color/orange" android:width="1.25dp"/>
            <padding android:bottom="36dp"/>
        </shape>
    </item>

    <item android:state_checked="false" android:color="@color/black">
        <shape android:shape="line">
            <stroke android:color="@color/black" android:width="1.25dp"/>
            <padding android:bottom="36dp"/>
        </shape>
    </item>

</selector>